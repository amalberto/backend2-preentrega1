<div class="container admin-products-page">
  <h1>üì¶ Gesti√≥n de Productos</h1>
  
  <!-- Formulario para crear/editar producto -->
  <div class="product-form-container">
    <h3 id="form-title">‚ûï Nuevo Producto</h3>
    <form id="product-form">
      <input type="hidden" id="product-id">
      
      <div class="form-row">
        <div class="form-group">
          <label for="title">T√≠tulo:</label>
          <input type="text" id="title" name="title" required placeholder="Nombre del producto">
        </div>
        
        <div class="form-group">
          <label for="code">C√≥digo:</label>
          <input type="text" id="code" name="code" required placeholder="SKU-001">
        </div>
      </div>
      
      <div class="form-group">
        <label for="description">Descripci√≥n:</label>
        <textarea id="description" name="description" rows="2" placeholder="Descripci√≥n del producto"></textarea>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label for="price">Precio:</label>
          <input type="number" id="price" name="price" required min="0" step="0.01" placeholder="99.99">
        </div>
        
        <div class="form-group">
          <label for="stock">Stock:</label>
          <input type="number" id="stock" name="stock" required min="0" placeholder="100">
        </div>
        
        <div class="form-group">
          <label for="category">Categor√≠a:</label>
          <input type="text" id="category" name="category" required placeholder="Electr√≥nica">
        </div>
      </div>
      
      <div class="form-group checkbox-group">
        <label>
          <input type="checkbox" id="status" name="status" checked>
          Producto activo
        </label>
      </div>
      
      <div class="form-actions">
        <button type="submit" class="btn btn-success" id="submit-btn">üíæ Guardar</button>
        <button type="button" class="btn btn-secondary" id="cancel-btn" hidden>‚ùå Cancelar</button>
      </div>
    </form>
  </div>
  
  <!-- Notificaciones -->
  <div id="notice" class="notice" hidden></div>
  
  <!-- Lista de productos -->
  <h3>üìã Productos existentes</h3>
  <div id="products-list" class="products-admin-list"></div>
  
  <div class="admin-nav">
    <a href="/admin-panel" class="btn btn-secondary">‚¨Ö Volver al Panel</a>
  </div>
</div>

